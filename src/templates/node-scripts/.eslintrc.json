{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": ["eslint:recommended", "jest", "plugin:import/errors", "prettier"],
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module"
	},
	"rules": {
		"indent": ["error", "tab"],
		"linebreak-style": ["error", "unix"],
		"quotes": ["error", "single"],
		"semi": ["error", "never"],
		"no-dupe-keys": ["error"],
		"no-undef": 2,
		"prefer-const": 2,
		"no-multiple-empty-lines": ["warn", { "max": 2, "maxBOF": 0, "maxEOF": 1 }],
		"import/order": [
			"warn",
			{
				"groups": ["external", "internal"]
			}
		],
		"import/no-extraneous-dependencies": ["warn"],
		"import/no-unresolved": 2
	}
}
